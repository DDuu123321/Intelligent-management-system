# 环境变量配置示例
# 复制此文件为 .env 并修改相应值

# 服务器配置
NODE_ENV=development
PORT=3000
HOST=localhost

# JWT 配置 (必须设置，至少32个字符)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d

# 数据库配置
# SQLite 模式 (开发环境推荐)
DB_DIALECT=sqlite
DB_STORAGE=database.sqlite

# PostgreSQL 模式 (生产环境推荐)
# DB_DIALECT=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=fleet_management
# DB_USER=your_db_user
# DB_PASS=your_db_password

# 数据库同步设置
DB_SYNC_FORCE=false

# CORS 配置
CORS_ORIGIN=http://localhost:5173

# 前端地址 (用于二维码生成)
FRONTEND_URL=http://localhost:5173

# 证件文件上传配置
LICENSE_ALLOWED_MIME=image/jpeg,image/png,image/webp,application/pdf
LICENSE_MAX_FILE_MB=10

# 定时任务配置
ENABLE_LICENSE_REMINDER_CRON=true

# 功能开关
SIMPLE_MODE=false

# 安全配置
# 速率限制已默认启用
# 文件安全检查已默认启用
