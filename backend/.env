# 开发环境配置
NODE_ENV=development
PORT=3000
HOST=localhost

# 数据库配置
DB_DIALECT=sqlite
DB_STORAGE=./database.sqlite

# JWT 安全配置
JWT_SECRET=dev-jwt-secret-change-me-this-is-long-enough-for-development-use-only-32chars
JWT_EXPIRES_IN=7d

# API 配置
API_PREFIX=/api/v1

# CORS 配置 - 允许前端访问
CORS_ORIGIN=http://localhost:5173

# 证件管理
ENABLE_LICENSE_REMINDER_CRON=true
TIMEZONE=Australia/Perth

# 数据库同步控制
DB_SYNC_FORCE=false

# 文件上传配置
MAX_FILE_SIZE=5MB
UPLOAD_DIR=./uploads

# 安全配置
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=24h

# 限流配置 - 开发环境更宽松
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=15

# 日志配置
ENABLE_LOGGING=true

# 调试模式
DEBUG=true
RATE_LIMIT_WINDOW=5