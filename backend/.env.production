NODE_ENV=production
PORT=3000
HOST=0.0.0.0

DB_DIALECT=sqlite
DB_STORAGE=./database.sqlite

# 生产环境必须设置强密码的JWT_SECRET
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_TO_A_STRONG_SECRET_AT_LEAST_64_CHARACTERS
JWT_EXPIRES_IN=2h

API_PREFIX=/api/v1
CORS_ORIGIN=https://yourdomain.com

# 证件管理
ENABLE_LICENSE_REMINDER_CRON=true
TIMEZONE=Australia/Perth

# 数据库同步控制 - 生产环境禁用强制同步
DB_SYNC_FORCE=false

# 生产环境配置
ENABLE_LOGGING=true
MAX_FILE_SIZE=5MB
UPLOAD_DIR=./uploads

# 安全配置
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=2h
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=15

# HTTPS 配置
FORCE_HTTPS=true
SECURE_COOKIES=true